@model List<Product>

<div class="row">

    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mr-1 mb-1" style="width: 20rem;">
                    <img src="/img/@item.Photo" class="card-img-top" alt="resim ekle">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Price</p>
                        <a asp-action="ProductDetails" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary float-right">content</a>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <div class="alert alert-info text-center">
            <H5 class="text-center">NO PRODUCTS FOUND</H5>
        </div>
    }

</div>