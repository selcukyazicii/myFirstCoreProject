@model List<Categories>
<link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<table class="table table-sm table-bordered table-hover">
    <a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-primary btn-sm my-2">ADD</a>
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>

            <td>
                <a asp-controller="Category" asp-action="Update" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-warning float-right">Update</a>
            </td>
            <td>
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>