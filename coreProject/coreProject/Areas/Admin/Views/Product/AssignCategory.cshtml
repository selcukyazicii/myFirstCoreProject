@model List<AssignCategoryModel>
    <form asp-action="AssignCategory" asp-controller="Product">
        <div class="form-check">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div>
                    <input type="hidden" asp-for="@Model[i].CategoryId" />
                    <input type="hidden" asp-for="@Model[i].CategoryName" />

                    <input type="checkbox" asp-for="@Model[i].IsThere" class="form-check-input" />
                    <label class="form-check-label">@Model[i].CategoryName</label>
                </div>

            }
            <div class="form-group">
                <button type="submit" class="btn btn-info">Kaydet</button>
            </div>
        </div>
    </form>