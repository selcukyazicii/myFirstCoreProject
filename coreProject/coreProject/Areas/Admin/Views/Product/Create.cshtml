@model coreProject.Models.CreateProductModel
<form asp-action="Create" asp-controller="Product" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">

    <div class="form-group">
        <label>Product Name: </label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control"  />
    </div>

    <div class="form-group">
        <label>Product Price: </label>
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
        <input asp-for="@Model.Price"class="form-control" />
    </div>
    
    <div class="form-group">
        <label>Product's Photo: </label>
        <input type="file" asp-for="@Model.Photo" class="form-control-file" />
    </div>
    <div>
        <button class="btn btn-primary">Create Product</button>
    </div>
</form>

@section Javascript{
    <script src="~/jqueryValidation/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}