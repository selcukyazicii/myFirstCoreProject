@model List<Product>
<link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<table class="table table-sm table-bordered table-hover">
    <a asp-action="Create" asp-controller="Product" asp-area="Admin" class="btn btn-primary btn-sm my-2">ADD</a>
    <tr>
        <th>ID</th>
        <th>Category</th>
        <th>Name</th>
        <th>Price</th>
        <th>Photo</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>
                <getCategoryName product-id="@item.Id"></getCategoryName>
            </td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Photo</td>
            <td>
                <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-warning float-right">Update</a>
            </td>
            <td>
                <a asp-controller="Product" asp-action="AssignCategory" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-info">Ata</a>
            </td>
            <td>
                <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-danger">Delete</a>
            </td>

        </tr>
    }
</table>